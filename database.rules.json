{
  "rules": {
    "accounts": {
      ".indexOn": "profileNeedsUpdate",
      "$uid": {
        ".read": "$uid === auth.uid",
        "githubToken": {
          ".write": "$uid === auth.uid"
        },
        "profileNeedsUpdate": {
          ".write": "$uid === auth.uid"
        },
        "events": {
          ".indexOn": ["startAt", "endAt"]
        }
      }
    },
    "profiles": {
      ".read": "true"
    },
    "events": {
      ".read": "true",
      ".indexOn": "startAt"
    },
    "assignments": {
      "$eventId": {
        "$topicId": {
          ".read": "data.child('members/' + auth.uid).exists()"
        }
      }
    },
    "updateProfileQueue": {
      ".indexOn": "updatedAt"
    }
  }
}
